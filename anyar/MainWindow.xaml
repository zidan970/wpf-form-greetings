<Window x:Class="anyar.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:anyar"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Button x:Name="showInputButton" Content="Show Greetings" Grid.Column="2"
                Grid.Row="3" Height="30" Click="retrieveTextInput" RenderTransformOrigin="1.467,2.851" Margin="128,6,41,-16"/>

        <TextBox x:Name="inputTextBox" Grid.Column="2" Grid.Row="1" Margin="77,10,15,10"
                 Height="25" Width="200" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
